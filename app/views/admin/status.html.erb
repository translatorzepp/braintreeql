<div class="wrapper">
  <div class="content">
    <h1><%= @status_name %> Transactions</h1>
    <% @transactions.each do |transaction| %>
      <article class="content compact">
        <section>
          <h5>Transaction</h5>

          <table cellpadding="0" cellspacing="0">
            <tbody>
              <tr>
                <th>id</th>
                <td><%= transaction["id"] %></td>
              </tr>

              <% if transaction["status"] == "GATEWAY_REJECTED" %>
                <tr>
                  <th>rejection reason</th>
                  <td><%= transaction["gatewayRejectionReason"] %></td>
                </tr>
                <% if transaction["riskData"] %>
                  <tr>
                    <th>risk decision</th>
                    <td><%= transaction["riskData"]["decision"] %></td>
                  </tr>
                  <tr>
                    <th>device data captured?</th>
                    <td><%= transaction["riskData"]["deviceDataCaptured"] %></td>
                  </tr>
                <% end %>
              <% elsif transaction["status"] == "PROCESSOR_DECLINED" and transaction["processorResponse"] %>
                <tr>
                  <th>processor message</th>
                  <td><%= transaction["processorResponse"]["message"] %></td>
                </tr>
                <tr>
                  <th>processor response code</th>
                  <td><%= transaction["processorResponse"]["legacyCode"] %></td>
                </tr>
                <tr>
                  <th>CVV/AVS Response Codes</th>
                  <td>cvv: <%= transaction["processorResponse"]["cvvResponseCode"] %>, postal code: <%= transaction["processorResponse"]["avsPostalCodeResponseCode"] %>, street address: <%= transaction["processorResponse"]["avsStreetAddressResponseCode"] %></td>
                </tr>
              <% else %>
                <tr>
                  <th>status</th>
                  <td><%= transaction["status"] %></td>
                </tr>
                <tr>
                  <th>amount</th>
                  <td><%= transaction["amount"] %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </section>
      </article>
    <% end %>
  </div>
  <%= render "drawer" %>
</div>
