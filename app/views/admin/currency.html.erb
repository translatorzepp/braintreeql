<div class="wrapper">
  <div class="content">
    <h1><%= @status_name %> Transactions</h1>
    <% @transactions.each do |transaction| %>
      <article class="content compact">
        <section>
          <h5>Transaction</h5>

          <table cellpadding="0" cellspacing="0">
            <tbody>
              <tr>
                <th>id</th>
                <td><%= transaction["id"] %></td>
              </tr>
              <tr>
                <th>currency code</th>
                <td><%= transaction["currencyIsoCode"] %></td>
              </tr>
              <tr>
                <th>amount</th>
                <td><%= transaction["amount"] %></td>
              </tr>
              <tr>
                <th>merchantAccountId</th>
                <td><%= transaction["merchantAccountId"] %></td>
              </tr>

              <% if transaction["paymentMethodSnapshot"] and transaction["paymentMethodSnapshot"]["__typename"] == "PayPalTransactionDetails" %>
                <tr>
                  <th>paypal fee currency code</th>
                  <td><%= transaction["paymentMethodSnapshot"]["transactionFeeCurrencyIsoCode"] %></td>
                </tr>
                <tr>
                  <th>paypal fee amount</th>
                  <td><%= transaction["paymentMethodSnapshot"]["transactionFeeAmount"] %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </section>
      </article>
    <% end %>
  </div>
  <%= render "drawer" %>
</div>
